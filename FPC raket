        function populateTable(tableId, data) {
            const tableBody = document.getElementById(tableId);
            data.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${row.no}</td>
                    <td>${row.process}</td>
                    <td class="symbol ${row.type}">${row.symbol}</td>
                    <td>${row.tool}</td>
                    <td>${row.time}</td>
                `;
                tableBody.appendChild(tr);
            });
        }

        populateTable('headRacketTable', headRacketData);
        populateTable('shaftRacketTable', shaftRacketData);
        populateTable('handleRacketTable', handleRacketData);
        populateTable('assemblyTable', assemblyData);
